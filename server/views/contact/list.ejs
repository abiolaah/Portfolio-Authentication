<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>

<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%=title%></h1>
            <table class="table" id="contactTable">
                <thead>
                  <tr>
                    <th scope="col-6">Contact First Name</th>
                    <th scope="col-6">Contact Last Name</th>
                    <th scope="col-6">Contact Phone Number</th>
                    <th scope="col-6">Contact Email Address</th>
                    <th scope="col-1"></th>
                    <th scope="col-1"></th>
                  </tr>
                </thead>
                <tbody class="table-group-divider">
                <%for(let count = 0; count < ContactList.length; count++){%>
                    <tr>
                      <td class="text-center col-2"><%=ContactList[count].firstname%></td>
                      <td class="text-center col-2"><%=ContactList[count].lastname%></td>
                      <td class="text-center col-4"><%=ContactList[count].phone%></td>
                      <td class="text-center col-1"><%=ContactList[count].email%></td>
                      <td class="text-center col-1"><a href="/contactList/update/<%=ContactList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Update</a></td>
                      <td class="text-center col-1"><a href="/contactList/delete/<%=ContactList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td> 
                    </tr>
                <%}%>
                </tbody>
              </table>
        </div>
    </div>
</main>
<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>